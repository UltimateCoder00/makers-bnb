<% if flash[:notice] %>
  <div id='notice'><%= flash[:notice] %></div>
<% end %>

<% if flash[:errors] && !flash[:errors].empty? %>
  Please refer to the following errors below:
  <ul id='errors'>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<% if flash[:requests] %>
  <div id='notice'><%=flash[:requests]%> requested</div>
<% end %>



<% if flash[:confirmations] %>
  <div id='notice'><%=flash[:confirmations]%></div>
<% end %>
