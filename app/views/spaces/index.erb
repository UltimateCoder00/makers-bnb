<div class="col-lg-8">
  <%if !@spaces.empty?%>
    <%@spaces.each do |space|%>
      <div class='space-index-frame col-lg-3'>
        <a class='invisible-space-link' id='<%=space.name%>' href='/spaces/<%=Space.first(name: "#{space.name}").id%>'>
          <div class='space-info' id='name'>
            Space Name: <%=space.name %>
          </div>

          <div class='space-info' id='location'>
            Location: <%=space.location %>
          </div>

          <div class='space-info' id='start-date'>
            Available from: <%=space.start_date %>
          </div>

          <div class='space-info' id='end_date'>
            Until: <%= space.end_date %>
          </div>

          <div class='space-info' id='price'>
            Price: <%=space.price %>
          </div>

          <div class='space-info' id='description'>
            Description: <%=space.description %>
          </div>

        </a>

        <form action='/booking/new' method='get'>
          <button class='btn btn-default booking-link-button' type="submit" value="Book">Book</button>
        </form>
       </div>
    <%end%>
  <%end%>
</div>
