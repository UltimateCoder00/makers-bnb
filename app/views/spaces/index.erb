                      <input type="text" name="location" id="filter-location-search" class="form-control input-lg" placeholder="Filter by city" />
                      </form>
                      <span class="input-group-btn">
                          <button class="btn btn-info btn-lg" type="submit" id="filter" value="filter">
                              <i class="glyphicon glyphicon-search"></i>
                          </button>
                      </span>
                  </div>
              </div>
          </div>
  	</div>

  </div>

